<mythmenu name="NETVISION">

    <button>
        <type>NET_VIDEO_SEARCH</type>
        <text>Search Internet Video</text>
        <description>Search popular video sites</description>
        <action>JUMP MythNetSearch</action>
        <depends>mythnetvision</depends>
    </button>

    <button>
        <type>NET_VIDEO_TREE</type>
        <text>Browse Internet Video</text>
        <description>Browse highlights and entire sites</description>
        <action>JUMP MythNetTree</action>
        <depends>mythnetvision</depends>
    </button>

    <button>
        <type>DAILY_SHOW</type>
        <text>The Daily Show</text>
        <description>The Daily Show with Jon Stewart - Full Episode Video</description>
        <action>EXEC /usr/local/bin/lircfirefox.py /usr/bin/firefox 'http://www.thedailyshow.com/full-episodes'</action>
    </button>

    <button>
        <type>AMAZON_VIDEO</type>
        <text>Amazon Instant Video</text>
        <description>Amazon.com: Your Video Library </description>
        <action>EXEC /usr/local/bin/lircfirefox.py /usr/bin/firefox 'https://www.amazon.com/gp/video/library'</action>
    </button>

    <button>
        <type>NETFLIX_STREAMING</type>
        <text>Netflix</text>
        <description>Netflix.com</description>
        <action>EXEC /usr/local/bin/lircfirefox.py /usr/bin/google-chrome --kiosk 'http://www.netflix.com/'</action>
    </button>

    <button>
        <type>YOUTUBE</type>
        <text>YouTube</text>
        <description>YouTube.com: My Subscriptions</description>
        <action>EXEC /usr/local/bin/lircfirefox.py /usr/bin/google-chrome --kiosk 'https://www.youtube.com/feed/subscriptions'</action>
    </button>

    <button>
        <type>LDS_CONFERENCE</type>
        <text>General Conference</text>
        <description>Watch Sessions of LDS General Conference</description>
        <action>EXEC /usr/local/bin/lircfirefox.py /usr/bin/firefox 'http://www.lds.org/general-conference/sessions/'</action>
    </button>

    <button>
        <type>SESAME_STREET</type>
        <text>Sesame Street</text>
        <description>Sesame Street Videos</description>
        <action>EXEC /usr/local/bin/lircfirefox.py /usr/bin/firefox 'http://www.sesamestreet.org/videos'</action>
    </button>

</mythmenu>
