<?xml version="1.0" encoding="UTF-8" ?>
<mythmenu name="LIBRARY">

    <button>
        <type>TV_WATCH_RECORDINGS</type>
        <text>Watch Recordings</text>
        <description>Browse your recordings</description>
        <action>TV_WATCH_RECORDING</action>
    </button>

    <button>
        <type>VIDEO_BROWSER</type>
        <text>Watch Videos</text>
        <description>Browse your video library</description>
        <action>JUMP Video Default</action>
    </button>

    <button>
        <type>MUSIC_PLAY</type>
        <text>Listen to Music</text>
        <description>Browse your music library</description>
        <action>JUMP Play music</action>
        <depends>mythmusic</depends>
    </button>

    <button>
        <type>NET_VIDEO_SEARCH</type>
        <text>Search Internet Video</text>
        <description>Search popular video sites</description>
        <action>JUMP MythNetSearch</action>
        <depends>mythnetvision</depends>
    </button>

    <button>
        <type>NET_VIDEO_TREE</type>
        <text>Browse Internet Video</text>
        <description>Browse highlights and entire sites</description>
        <action>JUMP MythNetTree</action>
        <depends>mythnetvision</depends>
    </button>

    <button>
        <type>COLBERT</type>
        <text>Colbert Nation</text>
        <description>The Colbert Report - Full Episode Video</description>
        <action>EXEC lircfirefox.py 'http://www.colbertnation.com/full-episodes/'</action>
    </button>

    <button>
        <type>DAILY_SHOW</type>
        <text>The Daily Show</text>
        <description>The Daily Show with Jon Stewart - Full Episode Video</description>
        <action>EXEC lircfirefox.py 'http://www.thedailyshow.com/full-episodes'</action>
    </button>

    <button>
        <type>AMAZON_VIDEO</type>
        <text>Amazon Instant Video</text>
        <description>Amazon.com: Your Video Library </description>
        <action>EXEC lircfirefox.py 'https://www.amazon.com/gp/video/library'</action>
    </button>

    <button>
        <type>STREAM</type>
        <text>Play Online Streams</text>
        <description></description>
        <action>PLUGIN mythstream</action>
        <depends>mythstream</depends>
    </button>

    <button>
        <type>IMAGES</type>
        <text>Image Gallery</text>
        <description>Look at Pictures</description>
        <action>PLUGIN mythgallery</action>
        <depends>mythgallery</depends>
    </button>

    <button>
        <type>GAME</type>
        <text>Play Games</text>
        <description>Play video games</description>
        <action>PLUGIN mythgame</action>
        <depends>mythgame</depends>
    </button>

</mythmenu>
